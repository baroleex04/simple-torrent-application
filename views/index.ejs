<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebTorrent App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>WebTorrent App</h1>

    <h2>Seed a File</h2>
    <form action="/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="file" required />
        <button type="submit">Upload and Seed</button>
    </form>

    <h2>Download a Torrent</h2>
    <form action="/download" method="GET">
        <input type="text" name="magnetURI" placeholder="Enter Magnet URI" required />
        <button type="submit">Download</button>
    </form>

    <h2>Active Torrents</h2>
    <ul>
        <% torrents.forEach((torrent) => { %>
            <li>
                <strong><%= torrent.name %></strong> - 
                <em>Magnet URI:</em> <a href="<%= torrent.magnetURI %>" target="_blank"><%= torrent.magnetURI %></a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
